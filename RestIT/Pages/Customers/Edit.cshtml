@page "{id}"
@model RestIT.Pages.Customers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Customer.Id" />
            <div class="form-group">
                <label asp-for="Customer.custName" class="control-label"></label>
                <input asp-for="Customer.custName" class="form-control" />
                <span asp-validation-for="Customer.custName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.custAge" class="control-label"></label>
                <input asp-for="Customer.custAge" class="form-control" />
                <span asp-validation-for="Customer.custAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.custPhone" class="control-label"></label>
                <input asp-for="Customer.custPhone" class="form-control" />
                <span asp-validation-for="Customer.custPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.custMail" class="control-label"></label>
                <input asp-for="Customer.UserName" class="form-control" />
                <span asp-validation-for="Customer.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.custCity" class="control-label"></label>
                @Html.DropDownList("City",
                  new SelectList(Enum.GetValues(typeof(CustomerCity))),
                  "Select Type",
                  new { @class = "form-control" })
                <span asp-validation-for="Customer.custCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Email"></label>
                <input asp-for="Customer.Email" class="form-control" />
                <span asp-validation-for="Customer.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.custSex" class="control-label"></label>
                @Html.DropDownList("Gender",
                  new SelectList(Enum.GetValues(typeof(CustomerSex))),
                  "Select Type",
                  new { @class = "form-control" })
                <span asp-validation-for="Customer.custSex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.custRestType" class="control-label"></label>
                @Html.DropDownList("Favourite Restaurant Type",
                  new SelectList(Enum.GetValues(typeof(CustomerRestType))),
                  "Select Type",
                  new { @class = "form-control" })
                <span asp-validation-for="Customer.custRestType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
