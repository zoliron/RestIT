@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav mr-auto navbar-right">
                <li>
                    <a asp-area="Identity" asp-page="/Account/Manage/Index" class="btn btn-secondary"> @UserManager.GetUserName(User)</a>
                </li>
                <li>
                    <button type="submit" class="btn btn-secondary">Logout</button>
                </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav mr-auto navbar-right">
        <li><a asp-area="Identity" asp-page="/Account/Register" class="btn btn-secondary">Register </a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login" class="btn btn-secondary">Login</a></li>
    </ul>
}